    <div class="middleContainer">

        <div class='date'>
            <%= dateAndTime %>
        </div>


        <div class="title">
            <h1> <%=  ToDoList %> </h1>
        </div>


        <div class="toDoContainer">

            <% newListItems.forEach(function (item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" value=<%= ToDoList %>></input>
            </form>
            <% }); %>

        </div>
        <div class='submitButton'>
            <form action="/" method="POST">
                <input type="text" placeholder="New Item" name='toDo'>
                <button class='btn' type="submit" name="list" value=<%= ToDoList %>><i class="fa fa-plus"></i>
                </button>
            </form>
        </div>

